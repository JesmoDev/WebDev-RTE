{
  "name": "@umbraco-ui/uui-rich-text-editor",
  "version": "0.0.0",
  "license": "MIT",
  "keywords": [
    "Umbraco",
    "Custom elements",
    "Web components",
    "UI",
    "Lit",
    "Rich Text Editor"
  ],
  "description": "Umbraco UI rich-text-editor component",
  "repository": {
    "type": "git",
    "url": "https://github.com/umbraco/Umbraco.UI.git",
    "directory": "packages/uui-rich-text-editor"
  },
  "bugs": {
    "url": "https://github.com/umbraco/Umbraco.UI/issues"
  },
  "main": "./dist/uui-rich-text-editor.min.js",
  "module": "./lib/index.js",
  "customElements": "custom-elements.json",
  "files": [
    "dist",
    "lib/**/*.d.ts",
    "lib/**/*.js",
    "custom-elements.json"
  ],
  "dependencies": {
    "@umbraco-ui/uui-base": "0.0.14",
    "@tiptap/core": "^2.0.0-beta.150",
    "@tiptap/extension-bubble-menu": "^2.0.0-beta.53",
    "@tiptap/extension-image": "^2.0.0-beta.24",
    "@tiptap/extension-link": "^2.0.0-beta.33",
    "@tiptap/extension-text-align": "^2.0.0-beta.29",
    "@tiptap/extension-underline": "^2.0.0-beta.22",
    "@tiptap/starter-kit": "^2.0.0-beta.153",
    "@types/node": "^16.11.9"
  },
  "scripts": {
    "build": "npm run analyze && tsc --build --force && rollup -c rollup.config.js",
    "clean": "tsc --build --clean && rimraf dist lib/*.js lib/**/*.js custom-elements.json",
    "analyze": "web-component-analyzer **/*.element.ts --outFile custom-elements.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://uui.umbraco.com/?path=/story/uui-rich-text-editor"
}
